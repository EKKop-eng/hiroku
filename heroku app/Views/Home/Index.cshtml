
@model List<string>
@{
    ViewData["Title"] = "Home Page";
}

<h2>CRUD Application</h2>
<p><a href="/Home/Create">Add New Record</a></p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@i</td>
                <td>@Model[i]</td>
                <td>
                    <a href="/Home/Edit/@i">Edit</a> |
                    <a href="/Home/Delete/@i">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
